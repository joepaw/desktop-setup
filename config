# browser workspace preferes external monitor
#workspace $ws1 output DP1
#workspace $ws2 output DP1
#workspace $ws3 output DP1
#workspace $ws4 output DP1
#workspace $ws5 output DP1
#workspace $ws6 output DP1
#workspace $ws7 output DP1
#workspace $ws8 output DP1
workspace $ws9 output HDMI2
workspace $ws10 output HDMI2

# rename workspace
bindsym $mod+F2 exec --no-startup-id i3-input -F 'rename workspace to %s' -P 'New name: '

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# workspace management
# workspace $ws1 output LVDS1
# workspace 9 automatically displays on an external monitor connected to the display port (for presentation purposes)
#workspace MONITOR output DP1

# Move the current workspace to the next output
# (effectively toggles when you only have two outputs)
bindsym $mod+o move workspace to output up

# Put this window on the presentation output.
# bindsym $mod+p move container to output DP1

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	colors {
        	background          $grey
        	statusline          $lgrey
		    #separator	    $grey
        	separator           $lgrey
		#		    border	background   text
        	focused_workspace   $grey       $grey        $lgrey
        	active_workspace    $grey       $grey        $dwhite
        	inactive_workspace  $grey       $grey        $dwhite
        	urgent_workspace    $grey        $red        $lgrey
    }
}


# next/previous workspace
bindsym $mod2+Tab focus right
bindsym $mod2+Shift+Tab focus left
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Next workspace next
bindsym $mod+Prior workspace prev

# Assign some applications to certain workspaces
# use xprop to figure out the class variable
#assign [class="Gnome-terminal"] $ws1
assign [class="chromium"] $ws2
assign [class="VirtualBox"] $ws4
assign [class="Pidgin"] $ws10
assign [class="Ts3client_linux_amd64"] $ws10
assign [class="jetbrains-android-studio"] $ws3
assign [class="Steam"] $ws7
assign [class="Skype"] $ws10

# disable borders for some applications
#for_window [class="^Chromium$"] border none
#for_window [class="^Firefox$"] border none
for_window [class="^Thunderbird$"] border none
#for_window [class="Nautilus"] border none

# enable floating mode for some applications
for_window [class="Nautilus" instance="file_progress"] floating enable
for_window [class="burp"] floating enable
for_window [class="Nautilus" instance="file_progress"] border normal
for_window [class="Steam" instance="Friends"] floating enable
for_window [class="Gcalctool"] floating enable
# weird workaround for steam, see https://github.com/ValveSoftware/steam-for-linux/issues/597
for_window [class="VirtualBox"] floating enable
#for_window [class="Steam" title="^Steam$"] floating disable
for_window [class="Pavucontrol"] floating enable

for_window [title="Hangouts"] floating enable
for_window [window_role="pop-up"] floating enable

# i3clock settings
#bindsym $mod+Escape exec i3lock -c 333333
#bindsym XF86ScreenSaver exec i3lock -c 333333
#bindsym XF86ScreenSaver exec --no-startup-id i3lock -i ~/img/archlinux-simplygrey-left_bottom.png
bindsym XF86ScreenSaver exec --no-startup-id i3lock -i ~/img/i3lock_black.png

# suspend
#bindsym XF86Sleep exec i3lock -i ~/img/archlinux-simplygrey-left_bottom.png && systemctl suspend
bindsym XF86Sleep exec --no-startup-id systemctl suspend

# Keybindings to start applications
bindsym $mod+c exec --no-startup-id /home/user/tools/sublime3/sublime_text 
#bindsym $mod+b exec --no-startup-id google-chrome-stable
bindsym $mod+b exec --no-startup-id chromium
# Keybindings to switch to certain applications
#bindsym $mod+Shift+b [class="^Google-chrome-stable$"] focus
bindsym $mod+Shift+b [class="^Firefox$"] focus

# set some nice colors      border     background  text seperator
client.focused              $dark        $grey         $lgrey	$lgrey
client.unfocused            $dark        $grey         $dwhite	$lgrey
client.focused_inactive     $dark        $grey         $dwhite	$lgrey
client.urgent               $dark        $grey         $dwhite	$lgrey

#exec --no-startup-id xsetroot -solid "#333333"
exec --no-startup-id nm-applet

# pulse audio volume control
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ '-10%' && killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ '+10%' && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -SIGUSR1 i3status

bindsym XF86AudioMicMute exec --no-startup-id amixer set Capture toggle && killall -SIGUSR1 i3status
bindsym XF86Launch1 exec --no-startup-id pavucontrol
bindsym $mod+F1 exec --no-startup-id pavucontrol
bindsym XF86MonBrightnessUp exec --no-startup-id /usr/bin/xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id /usr/bin/xbacklight -dec 10

# display monitor settings
#exec --no-startup-id xset dpms 600 600 600

# $mod+n reserved for close all notifications
# see ~/.config/dunst/dunstrc for more

# Screenshots based on the "Print" key. Requires the "scrot" tool.
# With $mod:  Interactively select window or rectangle.
# With Shift: JPEG instead of PNG.
# With Ctrl:  Sleep 5 seconds before doing the screenshot.
bindsym                Print               exec --no-startup-id            scrot    "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.png" && notify-send "png screenshot taken"
bindsym                Shift+Print         exec --no-startup-id            scrot    "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.jpg" && notify-send "jpg screenshot taken"
bindsym --release $mod+Print               exec --no-startup-id            scrot -s "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.png" && notify-send "png screenshot of window taken"
bindsym --release $mod+Shift+Print         exec --no-startup-id            scrot -s "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.jpg" && notify-send "jpg screenshot of window taken"
bindsym                Control+Print       exec --no-startup-id sleep 5 && scrot    "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.png" && notify-send "png screenshot in 5s"
bindsym                Control+Shift+Print exec --no-startup-id sleep 5 && scrot    "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.jpg" && notify-send "jpg screenshot in 5s"
bindsym --release $mod+Control+Print       exec --no-startup-id sleep 5 && scrot -s "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.png" && notify-send "png screenshot of window in 5s"
bindsym --release $mod+Control+Shift+Print exec --no-startup-id sleep 5 && scrot -s "$HOME/Pictures/Screenshot/%Y-%m-%d %H-%M-%S %z.jpg" && notify-send "jpg screenshot of window in 5s"

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# set desktop wallpaper
exec --no-startup-id feh --bg-scale /home/user/Pictures/v6.png

# shutdown, reboot, lock script
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.i3exit lock, mode "default"
    bindsym f exec --no-startup-id ~/.i3exit fun, mode "default"
    bindsym e exec --no-startup-id ~/.i3exit logout, mode "default"
    bindsym s exec --no-startup-id ~/.i3exit suspend, mode "default"
    bindsym h exec --no-startup-id ~/.i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.i3exit shutdown, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
#bindsym $mod+P mode "$mode_system"
bindsym Control+Mod1+Delete mode "$mode_system"
bindsym $mod+Escape mode "$mode_system"

# start nautilus interactively
set $mode_terminal Terminal (h) Home, (d) Downloads, (c) Cloud, (e) ETH, (n) NAS
mode "$mode_terminal" {
    bindsym h exec --no-startup-id gnome-terminal, mode "default"
    bindsym d exec --no-startup-id gnome-terminal --working-directory=Downloads, mode "default"
    bindsym c exec --no-startup-id gnome-terminal --working-directory=Dropbox, mode "default"
    bindsym e exec --no-startup-id gnome-terminal --working-directory=Dropbox/ETH/4.\ Semester\ FS14, mode "default"
    bindsym n exec --no-startup-id gnome-terminal --working-directory=/mnt/nas, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+t mode "$mode_terminal"


# start nautilus interactively
set $mode_nautilus File Browser (h) Home, (d) Downloads, (c) Cloud, (e) ETH, (n) NAS
mode "$mode_nautilus" {
    bindsym h exec --no-startup-id nautilus ~/, mode "default"
    bindsym d exec --no-startup-id nautilus ~/Downloads, mode "default"
    bindsym c exec --no-startup-id nautilus ~/Dropbox, mode "default"
    bindsym e exec --no-startup-id nautilus ~/Dropbox/ETH/4.\ Semester\ FS14, mode "default"
    bindsym n exec --no-startup-id nautilus /mnt/nas, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
#bindsym $mod+Shift+backslash mode "$mode_nautilus"
bindsym $mod+Shift+n mode "$mode_nautilus"

# choose xrandr displaymode
set $mode_display Display mode (d) dual, (m) monitor, (l) laptop
mode "$mode_display" {
    bindsym d exec --no-startup-id sh ~/.display dual, mode "default"
    bindsym m exec --no-startup-id sh ~/.display monitor, mode "default"
    bindsym l exec --no-startup-id sh ~/.display laptop, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+I mode "$mode_display"

exec --no-startup-id xautolock -time 10 -locker '~/.i3exit lock'
